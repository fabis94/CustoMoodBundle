{% extends "CustoMoodAppBundle::Main/main.layout.html.twig" %}
{% set title = project.name %}
{% block title title %}

{% block maincontent %}
    <h2>{{ title }}</h2>
    <div class="project-view">
        <div class="form-wrapper">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
        {% if data is defined %}
            <div class="chart-wrapper">
                <canvas id="data-chart" class="data-chart"></canvas>
                <script>
                    // Chart data
                    var chart_data = {{ data|json_encode()|raw }};
                </script>
            </div>
        {% endif %}
    </div>
{% endblock %}