{% extends "CustoMoodAppBundle::Admin/admin.layout.html.twig" %}
{% block title title %}

{% block maincontent %}
    <h1>{{ title }}</h1>
    {% if project is defined %}
        <div class="main-buttons left">
            <a href="{{ path('admin_project_edit', {'pid':project.id}) }}" class="button outline">Back</a>
            <a href="{{ path('admin_project_all') }}" class="button outline">Back to project listing</a>
        </div>
    {% endif %}
    <div class="form-wrapper">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}