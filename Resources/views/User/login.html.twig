{% extends "CustoMoodAppBundle::layout.html.twig" %}
{% set title = "Login" %}
{% block title title %}

{% block content %}
    <div class="row col col-12 align-center">
        <div class="main-column col col-8">
            <h1>{{ title }}</h1>
            <div class="form-wrapper">
                {% if error %}
                    <div class="message error" data-component="message">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                        <span class="close small"></span>
                    </div>
                {% endif %}

                <form action="{{ path('user_login') }}" method="post" class="medium">
                    <div class="form-row">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" />
                    </div>
                    <div class="form-row">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" />
                    </div>
                    <div class="form-row">
                        <button type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}